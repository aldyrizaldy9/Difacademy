<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="1dp"
    android:background="@drawable/rounded_corner_card"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_card_video_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@color/colorAccent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_card_video_thumbnail"
        style="@style/Difacademy.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Judul"
        app:layout_constraintStart_toStartOf="@+id/iv_card_video_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/iv_card_video_thumbnail" />

    <TextView
        android:id="@+id/tv_card_video_thumbnail_tag"
        style="@style/Difacademy.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Tag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_card_video_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_video_thumbnail" />

    <TextView
        android:id="@+id/tv_card_video_thumbnail_status_ongoing"
        style="@style/Difacademy.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="4/9"
        app:layout_constraintBottom_toBottomOf="@id/tv_card_video_thumbnail_tag"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>